{
    "appId": "2067380264@qq.com",
    "productName": "打飞机",
    "copyright": "Copyright @ 2021 ${author}",
    "directories": {
        "output": "release/${productName}${version}"
    },
    "files": [
        "dist/**"
    ],
    "mac": {
        "artifactName": "${productName}-${version}.${ext}",
        "target": [
            "dmg"
        ]
    },
    "win": {
        "target": [
            {
                "target": "nsis",
                "arch": [
                    "x64"
                ]
            }
        ],
        "artifactName": "${productName}-${version}.${ext}"
    },
    "nsis": {
        "oneClick": false,
        "perMachine": false,
        "allowToChangeInstallationDirectory": true,
        "deleteAppDataOnUninstall": false
    }
}